@define __DEBUG__[cmd]  5
@sequence H2_COUNT new
@@ define(`H2',
@@      `define(`H2_COUNT', incr(H2_COUNT))<h2>H2_COUNT. $1</h2>')
@@ @newcmd H2{arg1}{arg2}
@newcmd H2
<h2>@H2_COUNT@. @{arg1} (maybe @{arg2})</h2>
@cmdend
@@
@divert 1
@H2{aaa}{bbb}
@@ @H2{First Section}
@@ @H2 {Second Section}
@@ @H2{aaa} {bbb}
@@ @H2 {Conclusion} {Finish!}
@divert 0
<HTML>
@undivert 1
</HTML>
